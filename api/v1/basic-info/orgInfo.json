{
  "openapi": "3.0.3",
  "info": {
    "title": "OrgInfo API (CMP-001)",
    "description": "Query hierarchical site/zone list - Solution Vendor â†’ CMP (Pull)",
    "version": "1.0.0"
  },
  "servers": [{ "url": "https://your-domain.com/api/v1" }],
  "paths": {
    "/basic-info/orgInfo": {
      "get": {
        "summary": "CMP-001: Query site information list",
        "description": "Paginated sites with cicSiteId/siteId, multilingual names, GPS (WGS-84/HK1980), projectStatus, emergencyContact",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "pageNum",
            "in": "query",
            "schema": { "type": "integer", "default": 1, "minimum": 1 },
            "example": 1
          },
          {
            "name": "pageSize",
            "in": "query",
            "schema": { "type": "integer", "default": 10, "maximum": 200 },
            "example": 10
          }
        ],
        "responses": {
          "200": {
            "description": "Success - sites sorted by createTime DESC",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrgInfoResponse"
                }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "429": { "description": "Rate limit (100 req/s)" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Address": {
        "type": "object",
        "properties": {
          "en-HK": { "type": "string" },
          "zh-HK": { "type": "string" },
          "zh-CN": { "type": "string" }
        }
      },
      "Site": {
        "type": "object",
        "properties": {
          "siteId": { "type": "string", "example": "868655077658238" },
          "cicSiteId": { "type": "integer", "example": 58444354895 },
          "fullName": { "type": "string" },
          "name": { "type": "string" },
          "siteCode": { "type": "string", "example": "BJY" },
          "region": { "type": "integer", "enum": [1,2,3], "description": "1-Mainland China, 2-Macao, 3-Hong Kong" },
          "address": { "$ref": "#/components/schemas/Address" },
          "coordinateSystem": { "type": "string", "enum": ["WGS-84", "HK1980"] },
          "longitude": { "type": "string", "example": "114.366421" },
          "latitude": { "type": "string", "example": "22.711811" },
          "enableStatus": { "type": "boolean" },
          "projectStatus": {
            "type": "integer",
            "enum": [1,2,3,4],
            "description": "1-Construction preparation, 2-Under construction, 3-Suspended, 4-Completed"
          },
          "createTime": { "type": "string", "format": "date-time" },
          "updateTime": { "type": "string", "format": "date-time" },
          "emergencyContact": { "type": "string", "example": "Chan Tai Man 9876 5432" }
        },
        "required": ["siteId"]
      },
      "OrgInfoResponse": {
        "type": "object",
        "properties": {
          "code": { "type": "integer", "example": 10000 },
          "msg": { "type": "string", "example": "success" },
          "data": {
            "type": "object",
            "properties": {
              "totalCount": { "type": "integer", "example": 215 },
              "pageNum": { "type": "integer", "example": 1 },
              "pageSize": { "type": "integer", "example": 10 },
              "list": {
                "type": "array",
                "items": { "$ref": "#/components/schemas/Site" }
              }
            }
          }
        }
      }
    }
  }
}
