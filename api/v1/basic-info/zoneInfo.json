{
  "openapi": "3.0.3",
  "info": {
    "title": "ZoneInfo API (CMP-002)",
    "description": "Query zones/regions within a site - Solution Vendor â†’ CMP (Optional)",
    "version": "1.0.0"
  },
  "servers": [{ "url": "https://your-domain.com/api/v1" }],
  "paths": {
    "/basic-info/zoneInfo": {
      "get": {
        "summary": "CMP-002: Query regional/zone information in a site (OPTIONAL)",
        "description": "Paginated zones/floors/sections under specific siteId/cicSiteId",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "siteId",
            "in": "query",
            "required": true,
            "schema": { "type": "string", "example": "1693279120646" },
            "description": "Vendor site key"
          },
          {
            "name": "cicSiteId",
            "in": "query",
            "schema": { "type": "integer", "example": 594958493849 },
            "description": "CWRS site ID (optional)"
          },
          {
            "name": "pageNum",
            "in": "query",
            "schema": { "type": "integer", "default": 1, "minimum": 1 },
            "example": 1
          },
          {
            "name": "pageSize",
            "in": "query",
            "schema": { "type": "integer", "default": 10, "maximum": 200 },
            "example": 10
          }
        ],
        "responses": {
          "200": {
            "description": "Zones sorted by createTime DESC",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ZoneInfoResponse"
                }
              }
            }
          },
          "400": { "description": "Missing siteId" },
          "404": { "description": "Site not found" },
          "429": { "description": "Rate limit" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Address": {
        "type": "object",
        "properties": {
          "en-HK": { "type": "string" },
          "zh-HK": { "type": "string" },
          "zh-CN": { "type": "string" }
        }
      },
      "Zone": {
        "type": "object",
        "properties": {
          "zoneId": { "type": "string", "example": "zone-001" },
          "siteId": { "type": "string", "example": "1693279120646" },
          "zoneCode": { "type": "string", "example": "F01" },
          "fullName": { "type": "string" },
          "name": { "type": "string" },
          "address": { "$ref": "#/components/schemas/Address" },
          "longitude": { "type": "string", "example": "114.366421" },
          "latitude": { "type": "string", "example": "22.711811" },
          "coordinateSystem": { "type": "string", "enum": ["WGS-84", "HK1980"] },
          "enableStatus": { "type": "boolean", "default": true },
          "createTime": { "type": "string", "format": "date-time" },
          "updateTime": { "type": "string", "format": "date-time" }
        },
        "required": ["zoneId", "siteId"]
      },
      "ZoneInfoResponse": {
        "type": "object",
        "properties": {
          "code": { "type": "integer", "example": 10000 },
          "msg": { "type": "string", "example": "success" },
          "data": {
            "type": "object",
            "properties": {
              "totalCount": { "type": "integer", "example": 25 },
              "pageNum": { "type": "integer", "example": 1 },
              "pageSize": { "type": "integer", "example": 10 },
              "list": {
                "type": "array",
                "items": { "$ref": "#/components/schemas/Zone" }
              }
            }
          }
        }
      }
    }
  }
}
