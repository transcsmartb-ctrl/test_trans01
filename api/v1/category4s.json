json
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Category4SListResponse",
  "description": "Response schema for Category4S-001 List all available 4S categories API from CIC SSSS Framework (section 4.2.1) [file:1]",
  "type": "object",
  "properties": {
    "code": {
      "type": "integer",
      "description": "Response code (10000 success) [file:1]",
      "example": 10000
    },
    "msg": {
      "type": "string",
      "description": "Response message [file:1]",
      "example": "success"
    },
    "data": {
      "type": "object",
      "properties": {
        "totalCount": {
          "type": "integer",
          "description": "Total number of categories [file:1]",
          "example": 215
        },
        "pageNum": {
          "type": "integer",
          "description": "Page number [file:1]",
          "example": 1
        },
        "pageSize": {
          "type": "integer",
          "description": "Items per page [file:1]",
          "example": 10
        },
        "list": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "category4S": {
                "type": "string",
                "description": "Category 4S Type Code (see Appendix A) [file:1]",
                "example": "smart-monitoring-device"
              },
              "description": {
                "type": "string",
                "description": "Category description [file:1]",
                "example": "Wearable devices for worker health and safety monitoring"
              },
              "measurementFields": {
                "type": "array",
                "description": "Monitor fields (Appendix D) [file:1]",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Field name [file:1]",
                      "example": "heartRate"
                    },
                    "dataType": {
                      "type": "string",
                      "description": "Data type [file:1]",
                      "example": "number"
                    },
                    "unit": {
                      "type": "string",
                      "description": "Unit [file:1]",
                      "example": "min"
                    }
                  },
                  "required": ["name", "dataType", "unit"]
                },
                "example": [
                  {"name": "heartRate", "dataType": "number", "unit": "min"},
                  {"name": "bodyTemperature", "dataType": "number", "unit": "Cel"}
                ]
              }
            },
            "required": ["category4S", "description", "measurementFields"]
          }
        }
      },
      "required": ["totalCount", "pageNum", "pageSize", "list"]
    }
  },
  "required": ["code", "msg", "data"]
}
