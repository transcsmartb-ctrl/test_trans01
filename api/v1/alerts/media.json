
{
  "openapi": "3.0.3",
  "info": {
    "title": "Alert Media API",
    "description": "Push multimedia files (video/image) associated with alerts - requires mediaToken",
    "version": "1.0.0"
  },
  "servers": [{ "url": "https://your-domain.com/api/v1" }],
  "paths": {
    "/alerts/media": {
      "post": {
        "summary": "Alert-003: Push alert media by event trigger",
        "description": "Upload video/image files for specific alerts (MP4, AVI, WMV, RMVB). Use mediaToken from TOKEN-003 in query param (?token=xxx)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/AlertMediaRequest"
              }
            },
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/AlertMediaItem"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "token",
            "in": "query",
            "description": "Media access token from /api/mediaToken (15min expiry)",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "integer", "example": 10000 },
                    "msg": { "type": "string", "example": "success" },
                    "data": { "type": "object" }
                  }
                }
              }
            }
          },
          "413": { "description": "Payload Too Large (>10MB)" },
          "429": { "description": "Rate limit exceeded" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "AlertMediaItem": {
        "type": "object",
        "required": ["alertId", "videoUrl"],
        "properties": {
          "alertId": {
            "type": "string",
            "description": "Matching alert ID from Alert-001/002",
            "example": "40384093843"
          },
          "videoUrl": {
            "type": "string",
            "format": "uri",
            "description": "Direct URL to media file (MP4, AVI, WMV, RMVB)",
            "example": "https://storage.example.com/alerts/40384093843.mp4"
          },
          "pushAt": {
            "type": "string",
            "format": "date-time",
            "description": "Media upload timestamp",
            "example": "2025-01-06T19:00:02+08:00"
          },
          "category4S": {
            "type": "string",
            "description": "Associated 4S category",
            "example": "smart-monitoring-device"
          },
          "siteId": { "type": "string", "example": "1693279120646" },
          "supplierId": { "type": "string", "example": "438" }
        }
      },
      "AlertMediaRequest": {
        "type": "object",
        "properties": {
          "files": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "binary"
            }
          }
        }
      }
    }
  }
}
