{
  "openapi": "3.0.3",
  "info": {
    "title": "OAuth Authorize (TOKEN-002 Step 1)",
    "description": "OAuth 2.0 Authorization Code flow - browser redirect to get 'code'",
    "version": "1.0.0"
  },
  "servers": [{ "url": "https://your-domain.com/oauth" }],
  "paths": {
    "/authorize": {
      "get": {
        "summary": "TOKEN-002 Step 1: Get authorization code",
        "description": "Redirect browser to grant user consent â†’ code param",
        "parameters": [
          {
            "name": "response_type",
            "in": "query",
            "required": true,
            "schema": { "type": "string", "enum": ["code"] },
            "example": "code"
          },
          {
            "name": "client_id",
            "in": "query",
            "required": true,
            "schema": { "type": "string" },
            "example": "testsmart"
          },
          {
            "name": "redirect_uri",
            "in": "query",
            "required": true,
            "schema": { "type": "string", "format": "uri" },
            "example": "https://cmp.example.com/callback"
          },
          {
            "name": "scope",
            "in": "query",
            "schema": { "type": "string", "default": "login" },
            "example": "login"
          },
          {
            "name": "state",
            "in": "query",
            "schema": { "type": "string" },
            "description": "CSRF protection"
          }
        ],
        "responses": {
          "302": {
            "description": "Redirect to client with code",
            "headers": {
              "Location": {
                "schema": {
                  "type": "string",
                  "example": "https://cmp.example.com/callback?code=efr8&state=xyz"
                }
              }
            }
          },
          "400": { "description": "Invalid request (missing params)" }
        }
      }
    }
  }
}

