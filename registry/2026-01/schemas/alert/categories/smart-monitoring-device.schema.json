
{
  "openapi": "3.0.3",
  "info": {
    "title": "Smart Monitoring Alerts API",
    "description": "API for submitting smart-monitoring-device alerts",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://your-domain.com/api/v1"
    }
  ],
  "paths": {
    "/alerts": {
      "post": {
        "summary": "Submit smart-monitoring-device alerts",
        "description": "POST alert events with multilingual messages and recipients",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/SmartMonitoringAlert"
                }
              },
              "example": [
                {
                  "category4S": "smart-monitoring-device",
                  "siteId": "1693279120646",
                  "supplierId": "438",
                  "deviceSn": "868655077658237",
                  "pushAt": "2025-01-06T14:40:16+08:00",
                  "alertProperties": {
                    "alertId": "30284930284",
                    "alertType": "abnormal-body-temperature",
                    "alertLevel": 0,
                    "alertStatus": 0,
                    "alertMessage": {
                      "zh-CN": "异常体温",
                      "zh-HK": "異常體溫",
                      "en-HK": "Abnormal body temperature"
                    },
                    "alertTime": "2025-01-06T14:40:16+08:00",
                    "alertNum": 40
                  },
                  "additionalProperties": {
                    "cicSiteId": 594958493849,
                    "imageUrl": "https://xxxx.jpeg",
                    "notifyRecipient": {
                      "name": "Mike",
                      "phone": "65460369"
                    },
                    "triggerPersonnel": {
                      "id": "W1001",
                      "name": "Iris"
                    }
                  }
                }
              ]
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MultilingualMessage": {
        "type": "object",
        "properties": {
          "zh-CN": { "type": "string" },
          "zh-HK": { "type": "string" },
          "en-HK": { "type": "string" }
        },
        "required": ["zh-CN", "zh-HK", "en-HK"]
      },
      "Person": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" }
        },
        "required": ["id", "name"]
      },
      "SmartMonitoringAlert": {
        "type": "object",
        "required": [
          "category4S",
          "siteId",
          "supplierId",
          "deviceSn",
          "pushAt",
          "alertProperties"
        ],
        "properties": {
          "category4S": {
            "type": "string",
            "enum": ["smart-monitoring-device"]
          },
          "siteId": { "type": "string" },
          "supplierId": { "type": "string" },
          "deviceSn": { "type": "string" },
          "pushAt": { "type": "string", "format": "date-time" },
          "alertProperties": {
            "type": "object",
            "required": [
              "alertId",
              "alertType",
              "alertLevel",
              "alertStatus",
              "alertMessage",
              "alertTime",
              "alertNum"
            ],
            "properties": {
              "alertId": { "type": "string" },
              "alertType": {
                "type": "string",
                "enum": [
                  "abnormal-blood-pressure",
                  "abnormal-body-temperature",
                  "fall-detection",
                  "standstill-idling-detection",
                  "abnormal-heartbeat",
                  "worker-missing",
                  "low-battery",
                  "restricted-area-intrusion",
                  "crowd-density-too-high",
                  "SOS",
                  "others"
                ]
              },
              "alertLevel": {
                "type": "integer",
                "enum": [0, 1, 2],
                "description": "0=Notification, 1=Warning, 2=Critical"
              },
              "alertStatus": {
                "type": "integer",
                "enum": [0,1,2,3,4,5,6,7],
                "description": "0=Unprocessed → 7=Cancelled"
              },
              "alertMessage": { "$ref": "#/components/schemas/MultilingualMessage" },
              "alertTime": { "type": "string", "format": "date-time" },
              "alertNum": { "type": "number" }
            }
          },
          "additionalProperties": {
            "type": "object",
            "properties": {
              "cicSiteId": { "type": "integer", "minimum": 0 },
              "imageUrl": {
                "type": "string",
                "format": "uri",
                "pattern": ".*\\.jpeg$"
              },
              "notifyRecipient": { "$ref": "#/components/schemas/Person" },
              "triggerPersonnel": { "$ref": "#/components/schemas/Person" }
            }
          }
        }
      }
    }
  }
}
