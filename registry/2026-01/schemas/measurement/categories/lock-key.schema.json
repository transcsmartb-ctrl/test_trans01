
{
  "openapi": "3.0.3",
  "info": {
    "title": "Lock-Key Measurements API",
    "description": "API for submitting lock-key measurements (IoT lock status)",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://your-domain.com/api/v1"
    }
  ],
  "paths": {
    "/measurements": {
      "post": {
        "summary": "Submit lock-key measurements",
        "description": "POST lock status and battery/signal measurements",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/LockKeyMeasurement"
                }
              },
              "example": [
                {
                  "category4S": "lock-key",
                  "siteId": "1693279120646",
                  "supplierId": "438",
                  "deviceSn": "ac0003a0550",
                  "pushAt": "2025-01-06T10:30:00+08:00",
                  "measurements": [
                    {
                      "metricType": "signalStrength",
                      "dataType": "number",
                      "value": 80,
                      "unit": "%",
                      "observedAt": "2025-01-06T10:30:00+08:00"
                    },
                    {
                      "metricType": "battery",
                      "dataType": "number",
                      "value": 90,
                      "unit": "%",
                      "observedAt": "2025-01-06T10:30:00+08:00"
                    },
                    {
                      "metricType": "lockEvent",
                      "dataType": "string",
                      "value": "locked",
                      "unit": "",
                      "observedAt": "2025-01-06T10:30:00+08:00"
                    },
                    {
                      "metricType": "onlineStatus",
                      "dataType": "boolean",
                      "value": true,
                      "unit": "",
                      "observedAt": "2025-01-06T10:30:00+08:00"
                    }
                  ],
                  "additionalProperties": {
                    "cicSiteId": 438493849
                  }
                }
              ]
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Measurement": {
        "type": "object",
        "required": [
          "metricType",
          "dataType",
          "value",
          "unit",
          "observedAt"
        ],
        "properties": {
          "metricType": {
            "type": "string",
            "examples": ["signalStrength", "battery", "lockEvent"]
          },
          "dataType": {
            "type": "string",
            "enum": ["string", "number", "integer", "boolean", "object"]
          },
          "value": {
            "oneOf": [
              { "type": "string" },
              { "type": "number" },
              { "type": "integer" },
              { "type": "boolean" },
              {
                "type": "object",
                "properties": {
                  "longitude": { "type": "string" },
                  "latitude": { "type": "string" }
                }
              }
            ]
          },
          "unit": { "type": "string" },
          "observedAt": { "type": "string", "format": "date-time" }
        }
      },
      "LockKeyMeasurement": {
        "type": "object",
        "required": [
          "category4S",
          "siteId",
          "supplierId",
          "deviceSn",
          "pushAt",
          "measurements"
        ],
        "properties": {
          "category4S": {
            "type": "string",
            "enum": ["lock-key"]
          },
          "siteId": { "type": "string" },
          "supplierId": { "type": "string" },
          "deviceSn": { "type": "string" },
          "pushAt": { "type": "string", "format": "date-time" },
          "measurements": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Measurement" },
            "description": "Lock metrics: signalStrength, battery, lockEvent (locked/unlocked), onlineStatus"
          },
          "additionalMeasurements": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Measurement" }
          },
          "additionalProperties": {
            "type": "object",
            "properties": {
              "cicSiteId": { "type": "integer", "minimum": 0 }
            }
          }
        }
      }
    }
  }
}
