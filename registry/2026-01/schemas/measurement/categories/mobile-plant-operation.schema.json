{
  "openapi": "3.0.3",
  "info": {
    "title": "Mobile Plant Operation Measurements API",
    "description": "API for submitting mobile-plant-operation measurements",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://your-domain.com/api/v1"
    }
  ],
  "paths": {
    "/measurements": {
      "post": {
        "summary": "Submit mobile-plant-operation measurements",
        "description": "POST measurement data for mobile-plant-operation category4S",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/MobilePlantOperationMeasurement"
                }
              },
              "example": [
                {
                  "category4S": "mobile-plant-operation",
                  "siteId": "1693279120646",
                  "supplierId": "438",
                  "deviceSn": "ac0003a0550",
                  "pushAt": "2025-01-06T10:30:00+08:00",
                  "measurements": [
                    {
                      "metricType": "location",
                      "dataType": "object",
                      "value": {
                        "longitude": "137.4554",
                        "latitude": "28.7887"
                      },
                      "unit": "{lat, long}",
                      "observedAt": "2025-01-06T10:30:00+08:00"
                    },
                    {
                      "metricType": "workingStatus",
                      "dataType": "boolean",
                      "value": true,
                      "unit": "",
                      "observedAt": "2025-01-06T10:30:00+08:00"
                    },
                    {
                      "metricType": "onlineStatus",
                      "dataType": "boolean",
                      "value": true,
                      "unit": "",
                      "observedAt": "2025-01-06T10:30:00+08:00"
                    }
                  ],
                  "additionalMeasurements": [
                    {
                      "metricType": "handbrakeStatus",
                      "dataType": "boolean",
                      "value": false,
                      "unit": "",
                      "observedAt": "2025-01-06T10:30:00+08:00"
                    }
                  ],
                  "additionalProperties": {
                    "cicSiteId": 438493849,
                    "coordinateSystem": "WGS-84"
                  }
                }
              ]
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Measurement": {
        "type": "object",
        "required": [
          "metricType",
          "dataType",
          "value",
          "unit",
          "observedAt"
        ],
        "properties": {
          "metricType": {
            "type": "string",
            "description": "e.g., location, workingStatus"
          },
          "dataType": {
            "type": "string",
            "enum": ["string", "number", "integer", "boolean", "object"]
          },
          "value": {
            "oneOf": [
              { "type": "string" },
              { "type": "number" },
              { "type": "integer" },
              { "type": "boolean" },
              { 
                "type": "object",
                "properties": {
                  "longitude": { "type": "string" },
                  "latitude": { "type": "string" }
                },
                "required": ["longitude", "latitude"]
              }
            ]
          },
          "unit": {
            "type": "string"
          },
          "observedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "MobilePlantOperationMeasurement": {
        "type": "object",
        "required": [
          "category4S",
          "siteId",
          "supplierId",
          "deviceSn",
          "pushAt",
          "measurements"
        ],
        "properties": {
          "category4S": {
            "type": "string",
            "enum": ["mobile-plant-operation"]
          },
          "siteId": { "type": "string" },
          "supplierId": { "type": "string" },
          "deviceSn": { "type": "string" },
          "pushAt": { 
            "type": "string",
            "format": "date-time" 
          },
          "measurements": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Measurement" },
            "description": "Core: location, workingStatus, onlineStatus"
          },
          "additionalMeasurements": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Measurement" },
            "description": "Extended metrics (handbrakeStatus etc.)"
          },
          "additionalProperties": {
            "type": "object",
            "properties": {
              "cicSiteId": { "type": "integer", "minimum": 0 },
              "coordinateSystem": {
                "type": "string",
                "enum": ["WGS-84", "HK1980"]
              }
            }
          }
        }
      }
    }
  }
}

