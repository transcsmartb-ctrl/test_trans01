{
  "openapi": "3.0.3",
  "info": {
    "title": "Confined Space Device API",
    "description": "API for submitting confined-space data",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://your-domain.com/api/v1"
    }
  ],
  "paths": {
    "/devices": {
      "post": {
        "summary": "Submit confined space devices data",
        "description": "POST an array of confined-space objects",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/ConfinedSpaceDevice"
                }
              },
              "example": [
                {
                  "category4S": "confined-space",
                  "siteId": "1693279120646",
                  "supplierId": "438",
                  "pushAt": "2025-01-06T14:40:16+08:00",
                  "deviceProperties": {
                    "deviceSn": "SN-8655078237",
                    "deviceName": "confined-space 001",
                    "spaceName": "space 1",
                    "locationType": 1
                  },
                  "additionalProperties": {
                    "cicSiteId": 438493849,
                    "remark": "this is a confined-space",
                    "locationDesc": "the second floor",
                    "locationUrl": "https://xxxx.jpeg",
                    "planX": "15",
                    "planY": "30"
                  }
                }
              ]
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ConfinedSpaceDevice": {
        "type": "object",
        "required": [
          "category4S",
          "siteId",
          "supplierId",
          "pushAt",
          "deviceProperties"
        ],
        "properties": {
          "category4S": {
            "type": "string",
            "enum": ["confined-space"],
            "description": "Category 4S Type code for the device"
          },
          "siteId": {
            "type": "string",
            "description": "A unique Site ID defined by solution vendor as the key for corresponding site"
          },
          "supplierId": {
            "type": "string",
            "description": "A unique ID indicate the device's supplier"
          },
          "pushAt": {
            "type": "string",
            "format": "date-time",
            "description": "Means the data push time (ISO 8601)"
          },
          "deviceProperties": {
            "type": "object",
            "required": [
              "deviceSn",
              "deviceName",
              "spaceName",
              "locationType"
            ],
            "properties": {
              "deviceSn": {
                "type": "string",
                "description": "Serial number of the device by solution vendor (e.g., SN123456)"
              },
              "deviceName": {
                "type": "string",
                "description": "Name of the device (e.g., Confined Space Monitor)"
              },
              "spaceName": {
                "type": "string",
                "description": "Name of the confined space (e.g., Room A)"
              },
              "locationType": {
                "type": "integer",
                "enum": [1, 2],
                "description": "1=GPS positioning (requires longitude/latitude), 2=Floor plan positioning (requires planX/planY)"
              }
            }
          },
          "additionalProperties": {
            "type": "object",
            "properties": {
              "cicSiteId": {
                "type": "integer",
                "format": "int64",
                "minimum": 0,
                "description": "A unique site ID provided by CIC"
              },
              "locationUrl": {
                "type": "string",
                "format": "uri",
                "description": "URL for the floor plan (e.g., http://example.com/floorplan)"
              },
              "locationDesc": {
                "type": "string",
                "description": "Description of device location (e.g., East entrance)"
              },
              "planX": {
                "type": "string",
                "pattern": "^-?\\d+(\\.\\d+)?$",
                "description": "X-axis coordinate for floor plan position (decimal format)"
              },
              "planY": {
                "type": "string",
                "pattern": "^-?\\d+(\\.\\d+)?$",
                "description": "Y-axis coordinate for floor plan position (decimal format)"
              },
              "planZ": {
                "type": "string",
                "pattern": "^-?\\d+(\\.\\d+)?$",
                "description": "Z-axis coordinate for floor plan position/elevation (decimal format)"
              },
              "remark": {
                "type": "string",
                "description": "Additional remarks regarding the confined space monitoring (e.g., Safety inspection needed)"
              }
            }
          }
        }
      }
    }
  }
}
