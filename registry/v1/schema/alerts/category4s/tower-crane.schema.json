
{
  "openapi": "3.0.3",
  "info": {
    "title": "Tower Crane Alerts API",
    "description": "API for submitting tower-crane safety alerts",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://your-domain.com/api/v1"
    }
  ],
  "paths": {
    "/alerts": {
      "post": {
        "summary": "Submit tower-crane alerts",
        "description": "POST crane operation safety violations",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/TowerCraneAlert"
                }
              },
              "example": [
                {
                  "category4S": "tower-crane",
                  "siteId": "1693279120646",
                  "supplierId": "438",
                  "deviceSn": "868655077658237",
                  "pushAt": "2025-01-06T14:40:16+08:00",
                  "alertProperties": {
                    "alertId": "30284930284",
                    "alertType": "people-in-lifting-range",
                    "alertLevel": 0,
                    "alertStatus": 0,
                    "alertMessage": {
                      "zh-CN": "起吊范围有人",
                      "zh-HK": "起吊範圍有人",
                      "en-HK": "There are people in the lifting range"
                    },
                    "alertTime": "2025-01-06T14:40:16+08:00"
                  },
                  "additionalProperties": {
                    "imageUrl": "https://xxxx.jpeg",
                    "notifyRecipient": {
                      "name": "Mike",
                      "phone": "65460369"
                    },
                    "triggerPersonnel": {
                      "id": "W1001",
                      "name": "Iris"
                    }
                  }
                }
              ]
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MultilingualMessage": {
        "type": "object",
        "properties": {
          "zh-CN": { "type": "string" },
          "zh-HK": { "type": "string" },
          "en-HK": { "type": "string" }
        },
        "required": ["zh-CN", "zh-HK", "en-HK"]
      },
      "Person": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" }
        },
        "required": ["id", "name"]
      },
      "TowerCraneAlert": {
        "type": "object",
        "required": [
          "category4S",
          "siteId",
          "supplierId",
          "deviceSn",
          "pushAt",
          "alertProperties"
        ],
        "properties": {
          "category4S": {
            "type": "string",
            "enum": ["tower-crane"]
          },
          "siteId": { "type": "string" },
          "supplierId": { "type": "string" },
          "deviceSn": { "type": "string" },
          "pushAt": { "type": "string", "format": "date-time" },
          "alertProperties": {
            "type": "object",
            "required": [
              "alertId",
              "alertType",
              "alertLevel",
              "alertStatus",
              "alertMessage",
              "alertTime"
            ],
            "properties": {
              "alertId": { "type": "string" },
              "alertType": {
                "type": "string",
                "enum": [
                  "people-in-lifting-range",
                  "insufficient-time-lifting-preparation",
                  "insufficient-lifting-preparation-height",
                  "lifting-height-exceeds-limit",
                  "others"
                ]
              },
              "alertLevel": {
                "type": "integer",
                "enum": [0, 1, 2]
              },
              "alertStatus": {
                "type": "integer",
                "enum": [0,1,2,3,4,5,6,7]
              },
              "alertMessage": { "$ref": "#/components/schemas/MultilingualMessage" },
              "alertTime": { "type": "string", "format": "date-time" }
            }
          },
          "additionalProperties": {
            "type": "object",
            "properties": {
              "cicSiteId": { "type": "integer", "minimum": 0 },
              "imageUrl": {
                "type": "string",
                "format": "uri",
                "pattern": ".*\\.jpeg$"
              },
              "notifyRecipient": { "$ref": "#/components/schemas/Person" },
              "triggerPersonnel": { "$ref": "#/components/schemas/Person" }
            }
          }
        }
      }
    }
  }
}
