
{
  "openapi": "3.0.3",
  "info": {
    "title": "Others Alerts API",
    "description": "Catch-all alerts for undefined categories (final alert schema)",
    "version": "1.0.0"
  },
  "servers": [{ "url": "https://your-domain.com/api/v1" }],
  "paths": {
    "/alerts": {
      "post": {
        "summary": "Submit miscellaneous alerts",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": { "$ref": "#/components/schemas/OthersAlert" }
              },
              "example": [
                {
                  "category4S": "others",
                  "siteId": "1693279120646",
                  "supplierId": "438",
                  "deviceSn": "868655077658237",
                  "pushAt": "2025-01-06T14:40:16+08:00",
                  "alertProperties": {
                    "alertId": "30284930284",
                    "alertType": "others",
                    "alertLevel": 0,
                    "alertStatus": 0,
                    "alertMessage": {
                      "zh-CN": "其他警报",
                      "zh-HK": "其他警報",
                      "en-HK": "Other alert"
                    },
                    "alertTime": "2025-01-06T14:40:16+08:00"
                  },
                  "additionalProperties": {
                    "cicSiteId": 594958493849
                  }
                }
              ]
            }
          }
        },
        "responses": { "200": { "description": "Success" } }
      }
    }
  },
  "components": {
    "schemas": {
      "MultilingualMessage": {
        "type": "object",
        "properties": { "zh-CN": { "type": "string" }, "zh-HK": { "type": "string" }, "en-HK": { "type": "string" } },
        "required": ["zh-CN", "zh-HK", "en-HK"]
      },
      "OthersAlert": {
        "type": "object",
        "required": ["category4S", "siteId", "supplierId", "deviceSn", "pushAt", "alertProperties"],
        "properties": {
          "category4S": { "type": "string", "enum": ["others"] },
          "siteId": { "type": "string" },
          "supplierId": { "type": "string" },
          "deviceSn": { "type": "string" },
          "pushAt": { "type": "string", "format": "date-time" },
          "alertProperties": {
            "type": "object",
            "required": ["alertId", "alertType", "alertLevel", "alertStatus", "alertMessage", "alertTime"],
            "properties": {
              "alertId": { "type": "string" },
              "alertType": { "type": "string", "enum": ["others"] },
              "alertLevel": { "type": "integer", "enum": [0,1,2] },
              "alertStatus": { "type": "integer", "enum": [0,1,2,3,4,5,6,7] },
              "alertMessage": { "$ref": "#/components/schemas/MultilingualMessage" },
              "alertTime": { "type": "string", "format": "date-time" }
            }
          },
          "additionalProperties": {
            "type": "object",
            "properties": {
              "cicSiteId": { "type": "integer", "minimum": 0 }
            },
            "additionalProperties": false
          }
        }
      }
    }
  }
}
