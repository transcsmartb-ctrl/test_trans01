
{
  "openapi": "3.0.3",
  "info": {
    "title": "Confined Space Measurements API",
    "description": "API for submitting confined-space measurements (gas/environmental sensors)",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://your-domain.com/api/v1"
    }
  ],
  "paths": {
    "/measurements": {
      "post": {
        "summary": "Submit confined-space measurements",
        "description": "POST comprehensive gas/environmental measurements for confined-space",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/ConfinedSpaceMeasurement"
                }
              },
              "example": [
                {
                  "category4S": "confined-space",
                  "siteId": "1693279120646",
                  "supplierId": "438",
                  "deviceSn": "ac0003a0550",
                  "pushAt": "2025-01-06T10:30:00+08:00",
                  "measurements": [
                    {
                      "metricType": "temperature",
                      "dataType": "number",
                      "value": 34.2,
                      "unit": "Cel",
                      "observedAt": "2025-01-06T10:30:00+08:00"
                    },
                    {
                      "metricType": "o2",
                      "dataType": "number",
                      "value": 20.9,
                      "unit": "%VOL",
                      "observedAt": "2025-01-06T10:30:00+08:00"
                    }
                  ],
                  "additionalMeasurements": [
                    {
                      "metricType": "Illuminance",
                      "dataType": "number",
                      "value": 300,
                      "unit": "Lux",
                      "observedAt": "2025-01-06T10:30:00+08:00"
                    }
                  ],
                  "additionalProperties": {
                    "cicSiteId": 438493849,
                    "coordinateSystem": "WGS-84"
                  }
                }
              ]
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Measurement": {
        "type": "object",
        "required": [
          "metricType",
          "dataType",
          "value",
          "unit",
          "observedAt"
        ],
        "properties": {
          "metricType": {
            "type": "string",
            "examples": ["temperature", "o2", "pm10", "h2s", "co2", "lel"]
          },
          "dataType": {
            "type": "string",
            "enum": ["string", "number", "integer", "boolean", "object"]
          },
          "value": {
            "oneOf": [
              { "type": "string" },
              { "type": "number" },
              { "type": "integer" },
              { "type": "boolean" },
              {
                "type": "object",
                "properties": {
                  "longitude": { "type": "string" },
                  "latitude": { "type": "string" }
                }
              }
            ]
          },
          "unit": {
            "type": "string",
            "examples": ["Cel", "%VOL", "μg/m³", "ppm", "%LEL", "m/s", "Lux"]
          },
          "observedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "ConfinedSpaceMeasurement": {
        "type": "object",
        "required": [
          "category4S",
          "siteId",
          "supplierId",
          "deviceSn",
          "pushAt",
          "measurements"
        ],
        "properties": {
          "category4S": {
            "type": "string",
            "enum": ["confined-space"]
          },
          "siteId": { "type": "string" },
          "supplierId": { "type": "string" },
          "deviceSn": { "type": "string" },
          "pushAt": { "type": "string", "format": "date-time" },
          "measurements": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Measurement" },
            "description": "Core safety gases: temperature, o2, pm10/pm25, humidity, h2s/co/co2/ch4/lel/windSpeed, onlineStatus"
          },
          "additionalMeasurements": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Measurement" },
            "description": "Extended: Illuminance etc."
          },
          "additionalProperties": {
            "type": "object",
            "properties": {
              "cicSiteId": { "type": "integer", "minimum": 0 },
              "coordinateSystem": {
                "type": "string",
                "enum": ["WGS-84", "HK1980"]
              }
            }
          }
        }
      }
    }
  }
}
